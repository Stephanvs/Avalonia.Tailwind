<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Examples.Views.UserCard"
             >
  <Border Classes="p-3">
    <Border Classes="rounded-md bg-gray-100" >
      <StackPanel Classes="m-4 s-4" Orientation="Horizontal">
        <Border Classes="w-6 h-6 rounded-xl bg-gray-400" >
          <Image Source="/profile.png" />
        </Border>
        <StackPanel>
          <TextBlock Classes="text-lg" Text="Erin Lindford" />
          <TextBlock Classes="text-purple-500" Text="Product Engineer" />
          <TextBlock Classes="text-gray-600" Text="erinlindford@example.com" />
          <TextBlock Classes="text-gray-600" Text="(555) 765-4321" />
        </StackPanel>
      </StackPanel>
    </Border>
  </Border>
</UserControl>
